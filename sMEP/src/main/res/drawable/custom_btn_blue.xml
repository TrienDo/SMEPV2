<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3CBEDD" />
            <gradient
                android:angle="-90"
                android:startColor="#4d90fe"
                android:endColor="#357ae8"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3CBEDD" />
            <solid  android:color="#3CBEFF"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#8CBEDD" />
            <gradient
                android:angle="-90"
                android:startColor="#3CEFFF"
                android:endColor="#3CBEFF" />
        </shape>
    </item>
</selector>